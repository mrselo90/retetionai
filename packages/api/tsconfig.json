{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "paths": {
      "@recete/shared": [
        "../shared/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/test/**/*"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}