{
  "name": "@glowguide/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "start": "node -r dotenv/config -r newrelic dist/index.js",
    "start:no-nr": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@glowguide/shared": "workspace:*",
    "@glowguide/workers": "workspace:*",
    "@hono/node-server": "^1.8.2",
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.0",
    "@sentry/node": "^10.35.0",
    "@sentry/profiling-node": "^10.35.0",
    "bullmq": "^5.4.0",
    "dotenv": "^16.3.1",
    "hono": "^4.3.0",
    "ioredis": "^5.3.2",
    "newrelic": "^13.12.0",
    "openai": "^4.0.0",
    "pino": "^10.2.1",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  }
}