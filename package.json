{
  "name": "glowguide-retention-agent",
  "version": "0.1.0",
  "private": true,
  "description": "White-label SaaS platform for post-purchase AI assistance via WhatsApp",
  "scripts": {
    "dev": "pnpm --filter api dev",
    "dev:web": "pnpm --filter @glowguide/web dev",
    "dev:all": "pnpm --parallel --filter api --filter @glowguide/web dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "test:unit": "pnpm --filter @glowguide/api test && pnpm --filter @glowguide/shared test",
    "test:integration": "pnpm --filter @glowguide/api test integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "pnpm --filter @glowguide/api test:coverage"
  },
  "pnpm": {
    "overrides": {
      "ioredis": "5.9.1"
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}