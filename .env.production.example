# Production Environment Variables
# Copy this file to .env.production and fill in your values
# NEVER commit the actual .env.production file

# Supabase (Production Project)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-key

# Redis (Production Instance)
REDIS_URL=redis://your-production-redis:6379

# API Configuration (API process: use PORT=3002 when behind Nginx; see PORTS_AND_ROUTING.md)
PORT=3002
NODE_ENV=production
LOG_LEVEL=warn
ALLOWED_ORIGINS=https://app.recete.co.uk,https://recete.co.uk
API_URL=https://api.recete.co.uk
FRONTEND_URL=https://app.recete.co.uk

# Frontend (Next.js) Configuration
# INTERNAL_API_URL: used by Next.js rewrites to proxy /api-backend/* to the API. Set to the API's local URL (e.g. http://127.0.0.1:3002) so the app can reach the API. Required when behind Nginx to avoid "Could not reach the API".
INTERNAL_API_URL=http://127.0.0.1:3002
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
NEXT_PUBLIC_API_URL=https://api.recete.co.uk
NEXT_PUBLIC_APP_URL=https://app.recete.co.uk

# OpenAI
OPENAI_API_KEY=your-production-openai-key

# New Relic (APM â€“ optional; for Kubernetes/deployment)
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
NEW_RELIC_APP_NAME=recete-api
NEW_RELIC_ENABLED=true

# Sentry
SENTRY_DSN=https://your-production-sentry-dsn
SENTRY_ENVIRONMENT=production

# Shopify (Production App)
SHOPIFY_API_KEY=your-production-shopify-key
SHOPIFY_API_SECRET=your-production-shopify-secret

# WhatsApp (Production)
TWILIO_ACCOUNT_SID=your-production-account-sid
TWILIO_AUTH_TOKEN=your-production-auth-token
