# Staging Environment Variables
# Copy this file to .env.staging and fill in your values

# Supabase (Staging Project)
SUPABASE_URL=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-key

# Redis (Staging Instance)
REDIS_URL=redis://your-staging-redis:6379

# API Configuration
PORT=3001
NODE_ENV=staging
LOG_LEVEL=info
ALLOWED_ORIGINS=https://staging.glowguide.ai

# Frontend Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key
NEXT_PUBLIC_API_URL=https://api-staging.glowguide.ai

# OpenAI
OPENAI_API_KEY=your-openai-key

# Sentry (Optional)
SENTRY_DSN=https://your-staging-sentry-dsn
SENTRY_ENVIRONMENT=staging

# Shopify (Staging App)
SHOPIFY_API_KEY=your-staging-shopify-key
SHOPIFY_API_SECRET=your-staging-shopify-secret

# WhatsApp (Staging)
TWILIO_ACCOUNT_SID=your-staging-account-sid
TWILIO_AUTH_TOKEN=your-staging-auth-token
